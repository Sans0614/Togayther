  body.social
    //置頂導覽列
    //- 20220507 工程師新增.d-lg-block.d-none
    #navbar.bg-gray
      .container.navbarcontainer
        .row

          //20220617 把col-9 更改成 col-7
          .col-md-6.col-7.d-flex.align-items-center
            #navbarBrandLogo.ml-mb-0
              a(href='/')

                //20220622 更換圖片路徑 ./img/LogoWhite.svg 更改成 ./img/navbar/logo_social_test_white.svg
                img(src='./img/navbar/logo_social_test_white.svg')

          //20220617 把col-3 更改成 col-5
          .col-md-6.col-5.iconBlock.d-flex.align-items-center

            // 回到自媒體文章網站
            a.icon(href='/')
              img(src='./img/navbar/media_web_fill_white.svg')

            // 首頁 - 點擊後回到社群首頁頂端與重整頁面
            a#homebtn.icon.d-none.d-lg-block(href='')
              img(src='./img/navbar/home_outline_white.svg')

            // 202205070 開啟搜尋功能
            img#searchbtn.icon.d-none.d-lg-block(src='./img/navbar/search_outline_white.svg' type='button' data-bs-toggle='modal' data-bs-target='#social-search')

            // 訊息 - 社群第三階段開放
            // 20220428開啟私訊功能 #messagebtn.icon(src='./img/navbar/message_outline_white.svg' alt='') 更改成下方樣式
            .icon.position-relative

              // 新的私訊數在9則(包含)以內
              .social-notify-count.social-message-count 9

              //新的私訊數超過9則
              .social-notify-count.social-notify-more.social-message-count.social-message-count-more 9+

              img#messagebtn(src='./img/navbar/message_outline_white.svg' alt='')

            //發文 - 開啟上傳檔案視窗
            a.icon.d-none.d-lg-block
              img(src='./img/navbar/post_outline_white.svg' @click='$refs.socialUploadModal.show()')

            //通知
            //20220405 更改
            .icon.d-none.d-lg-block.position-relative(type='button' data-bs-toggle='modal' data-bs-target='#social-notify-modal')

              //新的通知數在9則(包含)以內
              .social-notify-count 9

              //新的通知數超過9則
              .social-notify-count.social-notify-more 9+

              img#notifybtn(src='./img/navbar/notify_outline_white.svg')

            //登入前會員頭像 - 連結到個人社群主頁，社群第二階段開放，但圖片先顯示
            a.member.d-none.d-lg-block.mr-16px(href='')
              img(src='./img/navbar/member_outline_white.svg' alt='')

            //登入後會員頭像 - 連結到個人社群主頁，社群第二階段開放，但圖片先顯示
            a.member.memberlogin.d-none.d-lg-block(href='/account')
              img(src='./img/navbar/MemberLoginIcon.svg' alt='')

    //置尾導覽列-lg以下顯示
    #navbar-lg-social.bg-gray.d-flex.d-lg-none.align-items-center.position-fixed.w-100.bottom-0

      //首頁 - 點擊後回到社群首頁頂端與重整頁面
      .navbar-lg-icon.d-flex.justify-content-center.align-items-center
        a#homebtn(href="")
          img.icon(src='./img/navbar/home_outline_white.svg')

      //搜尋
      //20220507 串接搜尋彈跳視窗
      .navbar-lg-icon.d-flex.justify-content-center.align-items-center(type='button' data-bs-toggle='modal' data-bs-target='#social-search')
        img#searchbtn(src='./img/navbar/search_outline_white.svg')

      //發文 - 開啟上傳檔案視窗
      .navbar-lg-icon.h-40px.d-flex.justify-content-center.align-items-center(type='button' data-bs-toggle='modal' data-bs-target='#edit-social-upload')
        img.h-40px#postbtn.icon(src='./img/navbar/post_outline_white.svg')

      //通知
      //20220405 更改
      .navbar-lg-icon.d-flex.justify-content-center.align-items-center.position-relative(type='button' data-bs-toggle='modal' data-bs-target='#social-notify-modal')

        //新的通知數在9則(包含)以內
        .social-notify-count 9

        //新的通知數超過9則
        .social-notify-count.social-notify-more 9+

        img#notifybtn.icon(src='./img/navbar/notify_outline_white.svg' alt='')

      //會員 - 連結到個人社群主頁，社群第二階段開放，但圖片先顯示
      .navbar-lg-icon.d-flex.justify-content-center.align-items-center
